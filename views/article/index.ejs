    <% layout('/layout/boilerplate') -%>
  <div class="container">
   
      <div class="col-6 offset-3 my-3">
        <%if(articles.length===0){%>
            <h3 class="text-center m-3 text-muted">沒有文章</h3>
        <%}else{%>
        <div class="card-group">
            <div class="row row-cols-1 row-cols-lg-2">
                <%for(let article of articles){%>
        
                    <div class="col mb-3"id="article-card">
                        <div class="card shadow border-dark" >
                            <div class="card-header"><a class="btn btn-outline-info btn-sm rounded-circle" href="/articles?q=city&city=<%=article.city%>"><%=allCity[article.city]%></a></div>                          
                                <img src="<%=article.images[0].url%>"class="card-img-top"id="article-img" alt="">
                                <div class="card-body pb-3 ">
                                    <h5 class="card-title"><%=article.title%></h5>
                                    <p class="card-text"><%=article.content.substring(0,70)%></p>
                                    <a href="/articles/<%=article._id%> "class="btn btn-primary btn-sm btn-block ">查看內容</a>
                                </div>
                                
                                <div class="card-footer ">
                                    <small class="text-muted"><%=article.createDate  %></small>
                                    <a href="/articles?q=<%=article.category%> " class="float-right badge <%=article.category==="food"?"badge-success":"badge-warning"%> p-2"><%=article.category%></a>
                                </div>
                                
                            
                                   
                        </div>
                    </div>
                    
                                               
                <%}%>
            </div>
        </div>
        <%}%>
      </div>
   
  </div>



       
